<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.whatsapp.HelloController"
      style="-fx-background-color: #f0f0f0;">

    <children>
        <Label text="Introduce tu nombre" />
        <TextField fx:id="nameField" promptText="Tu nombre" />

        <Label text="Introduce la dirección IP del servidor" />
        <TextField fx:id="ipField" promptText="Dirección IP" />

        <Label text="Introduce el puerto del servidor" />
        <TextField fx:id="portField" promptText="Puerto" />

        <Button text="Conectar" onAction="#connect" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    </children>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
